<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.b00063271.safesplit">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name=".SafeSplitApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/app_name">

             <!--<intent-filter>-->
             <!--<action android:name="android.intent.action.MAIN" />-->


             <!--<category android:name="android.intent.category.LAUNCHER" />-->
             <!--</intent-filter>-->
        </activity>
        <activity android:name=".AddUsers" />
        <activity android:name=".AddBill" />
        <activity
            android:name=".CustomPayment"
            android:windowSoftInputMode="stateHidden|adjustNothing" />
        <activity
            android:name=".paidByActivity"
            android:theme="@android:style/Theme.DeviceDefault.Dialog" />
        <activity android:name=".SplitActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".changeEmailDialog"
            android:theme="@android:style/Theme.DeviceDefault.Dialog" />
        <activity
            android:name=".changePasswordDialog"
            android:theme="@android:style/Theme.DeviceDefault.Dialog" />
    </application>

</manifest>