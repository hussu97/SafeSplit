<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".SplitActivity">

    <RadioGroup
        android:id="@+id/rg_split"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/radiobuttonbg"
            android:backgroundTint="@color/stage3"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center"
            android:text="="
            android:textColor="@color/colorSecondary"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/radiobuttonbg"
            android:backgroundTint="@color/stage3"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="1.23"
            android:textColor="@color/colorSecondary"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/radiobuttonbg"
            android:backgroundTint="@color/stage3"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="%"
            android:textColor="@color/colorSecondary"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/currentSplitTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:background="@color/stage3"
        android:gravity="center_vertical"
        android:fontFamily="@font/basic"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/colorSecondary"
        android:textSize="20sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/splitOptionsViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>